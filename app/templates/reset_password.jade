.reset-password-page.text-black
  .container.page-container
    .alert(ng-if="message.content" class="alert-{{message.type}}") {{message.content}}

    h1.page-header Reset password

    form.form-horizontal.form-reset-password
      fieldset(ng-hide="requestedCode")
        .form-group
          label.control-label.col-sm-1 Email
          .col-sm-5
            input.form-control(type="email" name="email" ng-model="user.email" placeholder="required" required="")
        .form-group
          .col-sm-offset-1.col-sm-5
            button.btn.btn-primary(type="button" ng-disabled="processing" ng-click="sendCode($event)")
              span Send security code
              i.fa.fa-spin.fa-spinner

      fieldset(ng-show="requestedCode")
        .form-group
          label.control-label.col-sm-2 New password
          .col-sm-4
            input.form-control(type="password" name="password" ng-model="user.password" placeholder="required" required="")
        .form-group
          label.control-label.col-sm-2 Security code
          .col-sm-4
            input.form-control(type="text" name="code" ng-model="user.access_token" placeholder="required" required="")
        .form-group
          .col-sm-offset-2.col-sm-4
            button.btn.btn-primary(type="button" ng-disabled="processing" ng-click="resetPassword($event)")
              span Reset password
              i.fa.fa-spin.fa-spinner

