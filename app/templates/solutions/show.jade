.solution-page.page-container.container
  ul.nav.nav-pills.nav-justified.ag-nav
    li(ng-repeat="tab in data", ng-class="tab.name === currentTab.name ? 'active' : ''")
      a.cap(href="/#/solutions/{{tab.name}}") {{tab.name.replace('_', ' ')}}

  .solution-content.page-section.bg-cloud.text-black
    .page-section-inner
      .row
        .col-sm-3
          img.img-responsive(src="{{currentTab.img}}", title="{{currentTab.name}}")
        .col-sm-9
          h1.headline.cap {{currentTab.name.replace('_', ' ')}}
          div(ng-bind-html="currentTab.content")

  .text-center
    a.btn.btn-lg.btn-primary(href="/#/docs/iOS") Get Started
